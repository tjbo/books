{
    "parser": "babel-eslint",
    "globals": {
        "React": true,
        "Radium": true,
        "ReactDOM": true,
        "PropTypes": true,
        "test": true,
        "expect": true,
        "it": true
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "experimentalDecorators": true,
            "jsx": true
        }
    },
    "rules": {
        "no-console":[1, { "allow": ["warn", "error"] }],
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1,
                "maxEOF": 0,
                "maxBOF": 0
            }
        ],
        "max-len": [
            1,
            240,
            2,
            {
                "ignoreComments": true
            }
        ],
        "quote-props": [
            1,
            "consistent-as-needed"
        ],
        "no-cond-assign": [
            2,
            "except-parens"
        ],
        "radix": 0,
        "space-infix-ops": 0,
        "spaced-comment": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            1,
            {
                "vars": "local",
                "args": "none"
            }
        ],
        "default-case": 0,
        "no-else-return": 0,
        "no-param-reassign": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "warn",
            "never"
        ]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ]
}
 
 